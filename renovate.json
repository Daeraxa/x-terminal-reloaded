{
  "config": {
    "extends": [
      "github>whitesource/merge-confidence:beta",
      "config:base"
    ],
    "packageRules": [
      {
        "matchPackagePatterns": [
          "^xterm"
        ],
        "groupName": "xterm"
      },
      {
        "matchDepTypes": [
          "devDependencies"
        ],
        "automerge": true,
        "commitMessageTopic": "devDependency {{depName}}"
      }
    ],
    "rangeStrategy": "bump"
  }
}
